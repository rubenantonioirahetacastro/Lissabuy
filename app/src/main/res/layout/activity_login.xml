<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login">


    <androidx.cardview.widget.CardView
        android:layout_above="@id/leyenda"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:bottomRightRadius="100dp"
        android:layout_height="350dp">

        <RelativeLayout
            android:background="#3c3c3c"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_login"
                android:layout_width="wrap_content"
                android:scaleType="fitEnd"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/rl_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Hola!,"
                    android:textColor="@color/colorGray"
                    android:textSize="65sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/white"
                    android:text="Bienvenido"
                    android:textSize="40sp" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/leyenda"
        android:layout_margin="10dp"
        android:textColor="@color/colorGray"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:text="Todo lo que buscas esta aquÃ­!"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>



    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/flayer"
            android:src="@drawable/flayer"
            android:scaleType="fitCenter"
            android:layout_width="175dp"
            android:layout_centerHorizontal="true"
            android:layout_height="75dp"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btnGoogle"
            android:layout_below="@id/flayer"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

            <TextView
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/btnGoogle"
                android:id="@+id/txt_terms"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:textSize="9sp"
                android:text="By signing up, you agree to our Terms and Privacy Policy"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>